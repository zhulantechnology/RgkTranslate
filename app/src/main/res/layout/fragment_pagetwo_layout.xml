<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="215dp">

        <LinearLayout
            android:id="@+id/photo_translate_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_menu_height"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/photo_translate_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_menu_img_margin_top"
                android:src="@drawable/photo_translate" />

            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dimen_menu_text_size"
                android:text="Photo Translate"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_menu_height"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/map_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/map_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_menu_img_margin_top"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dimen_menu_text_size"
                android:text="Map"
                android:textColor="#FFF" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:id="@+id/exchange_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_menu_height"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/exchange_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/exchange_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_menu_img_margin_top"
                android:src="@drawable/exchange" />

            <TextView
                android:id="@+id/exchange_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Exanchage"
                android:textSize="@dimen/dimen_menu_text_size"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wizard_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_menu_height"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/wizard_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wizard_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_menu_img_margin_top"
                android:src="@drawable/voice_wizard" />

            <TextView
                android:id="@+id/wizard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dimen_menu_text_size"
                android:text="Voice Wizard"
                android:textColor="#FFF" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
